<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/searchScreenFragment">

    <fragment
        android:id="@+id/searchScreenFragment"
        android:name="com.tronindmitr.githubsearch.screens.searchScreen.SearchScreenFragment"
        android:label="SearchScreenFragment"
        tools:layout="@layout/fragment_search_screen">
        <action
            android:id="@+id/action_searchScreenFragment_to_historyScreenFragment"
            app:destination="@id/historyScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyScreenFragment"
        android:name="com.tronindmitr.githubsearch.HistoryScreenFragment"
        android:label="fragment_history_screen"
        tools:layout="@layout/fragment_history_screen"
        />
</navigation>